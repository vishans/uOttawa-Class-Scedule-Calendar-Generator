{
    "manifest_version": 3,
    "name": "DOM Scraper",
    "version": "1.0",
    "description": "Scrapes data from a webpage and allows the user to download it.",
    "permissions": ["activeTab", "scripting", "tabs"],
    "host_permissions": ["*://*/*"],
    "action": {
      "default_popup": "popup.html"
    },
    "content_scripts": [
      {
        "matches": [
            "http://*/*",
            "https://*/*"],
        "js": ["content.js"]
      }
    ]
}